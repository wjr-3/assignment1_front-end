/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.add-btn {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.search-box {
  margin-bottom: 20rpx;
}

.search-input {
  background-color: white;
  border-radius: 8rpx;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  height: 80rpx; /* 增加高度 */
}

.contact-list {
  background-color: white;
  border-radius: 8rpx;
  overflow: hidden;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-info .name {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.contact-info .phone {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.contact-info .class {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 5rpx;
}

.contact-info .remark {
  font-size: 24rpx;
  color: #888;
  display: block;
}

.contact-actions {
  display: flex;
  gap: 10rpx;
}

.delete-btn {
  background-color: #ff3b30;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}
/* pages/add/add.wxss */
.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-weight: bold;
  color: #333;
  font-size: 28rpx;
}

.input {
  background-color: white;
  border-radius: 8rpx;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  height: 80rpx; /* 增加输入框高度 */
  line-height: 1.4; /* 改善文字垂直对齐 */
}

.textarea {
  background-color: white;
  border-radius: 8rpx;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  font-size: 28rpx;
  height: 160rpx;
  width: 100%;
  box-sizing: border-box;
  line-height: 1.4;
}

.submit-btn {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 30rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
  width: 100%;
}

/* 添加一些额外的样式来提升输入框的可见性 */
.input:focus {
  border-color: #007aff;
  box-shadow: 0 0 0 2rpx rgba(0, 122, 255, 0.2);
}

.textarea:focus {
  border-color: #007aff;
  box-shadow: 0 0 0 2rpx rgba(0, 122, 255, 0.2);
}